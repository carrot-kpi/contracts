{
    "name": "@carrot/contracts",
    "version": "0.1.0",
    "description": "A smart contract solution to create scalar and boolean KPI tokens, by DXdao.",
    "author": "Federico Luzzi <federico.luzzi@protonmail.com>",
    "license": "GPL-3.0-or-later",
    "private": true,
    "scripts": {
        "lint:prettier": "prettier -l contracts/**/*.sol tests/**/*.sol scripts/**/*.sol",
        "lint:commit-message": "commitlint -e",
        "lint": "npm run lint:prettier",
        "test": "FOUNDRY_PROFILE=test forge test",
        "test:coverage": "FOUNDRY_PROFILE=test forge coverage",
        "test:gasreport": "FOUNDRY_PROFILE=test forge test --gas-report",
        "snapshot": "FOUNDRY_PROFILE=test forge snapshot",
        "compile": "forge build",
        "compile:production": "FOUNDRY_PROFILE=production forge build",
        "prepare": "husky install"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.0.3",
        "@commitlint/config-conventional": "^17.0.3",
        "babel-eslint": "^10.1.0",
        "husky": "^8.0.1",
        "prettier": "^2.7.1",
        "prettier-plugin-solidity": "^1.0.0-beta.19",
        "solhint-plugin-prettier": "^0.0.5"
    }
}
