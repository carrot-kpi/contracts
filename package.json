{
    "name": "@carrot/contracts",
    "version": "0.1.0",
    "description": "A smart contract solution to create scalar and boolean KPI tokens, by DXdao.",
    "author": "Federico Luzzi <federico.luzzi@protonmail.com>",
    "license": "GPL-3.0-or-later",
    "private": true,
    "scripts": {
        "lint:eslint": "eslint \"test/**/*.ts\" \"tasks/**/*.ts\"",
        "lint:prettier": "prettier -l contracts/**/*.sol && prettier -l test/**/*.js",
        "lint:commit-message": "commitlint -e",
        "lint": "yarn lint:eslint && yarn lint:prettier",
        "test": "FOUNDRY_PROFILE=test forge test",
        "test:coverage": "hardhat coverage",
        "test:gasreport": "FOUNDRY_PROFILE=test forge test --gas-report",
        "test:snapshot": "FOUNDRY_PROFILE=test forge snapshot",
        "compile": "forge build",
        "compile:production": "FOUNDRY_PROFILE=production forge build",
        "prepare": "husky install",
        "typechain": "typechain --outDir=typechain-types --target=ethers-v5 './artifacts/contracts/**/!(*.dbg).json'",
        "deploy:rinkeby": "hardhat deploy --network rinkeby",
        "deploy:rinkeby:verify": "hardhat deploy --network rinkeby --verify",
        "deploy:rinkeby:automation-enabled": "hardhat deploy --network rinkeby --verify --workers-jobs-registry-address 0x480401a34Fd72b6B0820d8C99C01E9Fc00B61f93",
        "upgrade-uniswap-v2-twap-template:rinkeby": "hardhat upgrade-uniswap-v2-twap-template --network rinkeby --verify --oracles-manager-address 0xFB28b13DFbE6135b20DE1705F6c1442707d93458",
        "upgrade-manual-reality-oracle-template:rinkeby": "hardhat upgrade-manual-reality-eth-oracle-template --network rinkeby --verify --oracles-manager-address 0xFB28b13DFbE6135b20DE1705F6c1442707d93458",
        "upgrade-erc20-kpi-token-template:rinkeby": "hardhat upgrade-erc20-kpi-token-template --network rinkeby --verify --kpi-tokens-manager-address 0x90DdDE55f03DeEa3CDE0393A2276272019896f66",
        "upgrade-aave-erc20-kpi-token-template:rinkeby": "hardhat upgrade-aave-erc20-kpi-token-template --network rinkeby --verify --kpi-tokens-manager-address 0x90DdDE55f03DeEa3CDE0393A2276272019896f66",
        "upgrade-manual-reality-eth-oracle-template:rinkeby": "hardhat upgrade-manual-reality-eth-oracle-template --network rinkeby --verify --oracles-manager-address 0xFB28b13DFbE6135b20DE1705F6c1442707d93458",
        "create-uniswap-v2-twap-kpi-token:rinkeby": "hardhat create-uniswap-v2-twap-kpi-token --network rinkeby --factory-address 0xf00DB5431bA11f708854aF443EB785eDEB97744a --kpi-tokens-manager-address 0x90DdDE55f03DeEa3CDE0393A2276272019896f66 --oracles-manager-address 0xFB28b13DFbE6135b20DE1705F6c1442707d93458",
        "create-reality-eth-kpi-token:rinkeby": "hardhat create-reality-eth-kpi-token --network rinkeby --kpi-template-id 0 --oracle-template-id 0 --workers-token-address 0x727fBc9Cb628Ef25cf8AB59aC4eac26c251f6Ed6 --factory-address 0xf00DB5431bA11f708854aF443EB785eDEB97744a",
        "create-manual-reality-eth-erc20-kpi-token:rinkeby": "hardhat create-manual-reality-eth-erc20-kpi-token --network rinkeby --kpi-template-id 0 --oracle-template-id 0 --factory-address 0xf00DB5431bA11f708854aF443EB785eDEB97744a --kpi-tokens-manager-address 0x90DdDE55f03DeEa3CDE0393A2276272019896f66 --reality-address 0x3D00D77ee771405628a4bA4913175EcC095538da",
        "create-manual-reality-eth-aave-erc20-kpi-token:rinkeby": "hardhat create-manual-reality-eth-aave-erc20-kpi-token --network rinkeby --kpi-template-id 1 --oracle-template-id 1 --factory-address 0xf00DB5431bA11f708854aF443EB785eDEB97744a --kpi-tokens-manager-address 0x90DdDE55f03DeEa3CDE0393A2276272019896f66"
    },
    "devDependencies": {
        "@commitlint/cli": "^16.2.1",
        "@commitlint/config-conventional": "^16.2.1",
        "@nomiclabs/hardhat-ethers": "^2.0.6",
        "@nomiclabs/hardhat-etherscan": "^3.0.3",
        "@openzeppelin/contracts": "^4.6.0",
        "@openzeppelin/contracts-upgradeable": "^4.6.0",
        "@realitio/realitio-contracts": "^2.2.9",
        "@realitio/realitio-lib": "^2.0.2",
        "babel-eslint": "^10.1.0",
        "cross-env": "^7.0.3",
        "dotenv": "^16.0.1",
        "eslint": "^8.15.0",
        "ethers": "^5.6.6",
        "hardhat": "^2.9.5",
        "hardhat-dependency-compiler": "^1.1.2",
        "husky": "^7.0.4",
        "prettier": "^2.6.2",
        "prettier-plugin-solidity": "^1.0.0-beta.19",
        "solhint-plugin-prettier": "^0.0.5",
        "ts-generator": "^0.1.1",
        "ts-node": "^10.7.0",
        "typescript": "^4.6.4"
    }
}
