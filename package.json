{
    "name": "@carrot-kpi/contracts",
    "version": "0.1.0",
    "description": "A smart contract solution to create scalar and boolean KPI tokens, by DXdao.",
    "author": "Federico Luzzi <federico.luzzi@protonmail.com>",
    "license": "GPL-3.0-or-later",
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "./artifacts/IKPIToken.sol",
        "./artifacts/IKPITokensManager1.sol",
        "./artifacts/IOracle.sol",
        "./artifacts/IOraclesManager1.sol",
        "./artifacts/IBaseTemplatesManager.sol",
        "./artifacts/IKPITokensFactory.sol",
        "./artifacts/KPITokensManager1.sol",
        "./artifacts/OraclesManager1.sol",
        "./artifacts/BaseTemplatesManager.sol",
        "./artifacts/KPITokensFactory.sol",
        "./.addresses.json"
    ],
    "scripts": {
        "lint": "solhint './src/**/*.sol' './scripts/*.sol' './tests/**/*.sol' && prettier --check .",
        "format": "solhint --fix ./src/**/*.sol ./scripts/*.sol ./tests/**/*.sol",
        "lint:commit-message": "commitlint -e",
        "test": "FOUNDRY_PROFILE=test forge test",
        "test:coverage": "FOUNDRY_PROFILE=test forge coverage",
        "test:gasreport": "FOUNDRY_PROFILE=test forge test --gas-report",
        "snapshot": "FOUNDRY_PROFILE=test forge snapshot",
        "compile": "forge build",
        "compile:production": "FOUNDRY_PROFILE=production forge build",
        "prepare": "husky install",
        "prepublishOnly": "npm run compile"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.0.3",
        "@commitlint/config-conventional": "^17.0.3",
        "husky": "^8.0.1",
        "prettier": "^2.7.1",
        "solhint": "^3.3.7"
    }
}
